{
  "info": {
    "name": "HenryMo Technologies API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@henrymo.tech\",\n  \"password\": \"yourpassword\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{base_url}}/auth/login"
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{auth_token}}" }],
            "url": "{{base_url}}/auth/me"
          }
        }
      ]
    },
    {
      "name": "CMS",
      "item": [
        {
          "name": "Get Pages",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/cms/pages"
          }
        },
        {
          "name": "Create Page",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{auth_token}}" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test\",\n  \"slug\": \"/test\",\n  \"content\": \"<p>Hi</p>\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{base_url}}/cms/pages"
          }
        }
      ]
    },
    {
      "name": "Social",
      "item": [
        {
          "name": "Schedule Post",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{auth_token}}" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"platform\": \"linkedin\",\n  \"content\": \"Check out HenryMo Technologies!\",\n  \"scheduledAt\": \"2025-12-12T10:00:00Z\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{base_url}}/social/schedule"
          }
        },
        {
          "name": "Get Scheduled Posts",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{auth_token}}" }],
            "url": "{{base_url}}/social/schedule"
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000/api" },
    { "key": "auth_token", "value": "" }
  ]
}

